<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <OutputType>Library</OutputType>
    <LangVersion>8.0</LangVersion>
    <Nullable>disable</Nullable>
    <NoWarn>$(NoWarn);NU1701</NoWarn>
  </PropertyGroup>

  <PropertyGroup>
    <VersionPrefix>0.10.0</VersionPrefix>
    <VersionSuffix>preview2</VersionSuffix>
    <Authors>Mike James</Authors>
    <Company>Mike James</Company>
    <Description>Avalonia color-picker controls (HSV colour picker, arc-slider, XYZ/xyY color picker)

Includes: 
- CIE1931 luminance correction. 
- CIE XYZ/xyY models for device-independent colour control.</Description>
    <Copyright>Copyright Â© Mike James 2020</Copyright>
    <RootNamespace>ColorPickers</RootNamespace>
    <Product>Color Picker</Product>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  
  
  <ItemGroup>

    <Compile Update="**\*.xaml.cs">
      <DependentUpon>%(Filename)</DependentUpon>
    </Compile>
    <EmbeddedResource Include="**\*.xaml">
      <SubType>Designer</SubType>
    </EmbeddedResource>   
  </ItemGroup>

  
  
  <ItemGroup>
    <AvaloniaXaml Remove="Controls\ColorHue.axaml" />
    <AvaloniaXaml Remove="Controls\ColorHueSlider.axaml" />
    <AvaloniaXaml Remove="Controls\FigmaColorPicker.axaml" />
  </ItemGroup>

  
  
  <ItemGroup>
    <Compile Remove="Controls\ColorHue.axaml.cs" />
    <Compile Remove="Controls\ColorHueSlider.axaml.cs" />
    <Compile Remove="Controls\FigmaColorPicker.axaml.cs" />
  </ItemGroup>


  <ItemGroup>
    <PackageReference Include="Avalonia" Version="0.10.0-preview2" />
    <PackageReference Include="MathNet.Numerics" Version="4.12.0" />
  </ItemGroup>


  <ItemGroup>
    <Compile Update="Primitives\ColorSpectrum.axaml.cs">
      <DependentUpon>ColorSpectrum.axaml</DependentUpon>
    </Compile>
    <Compile Update="Themes\Default.axaml.cs">
      <DependentUpon>Default.axaml</DependentUpon>
    </Compile>
  </ItemGroup>


  <ItemGroup>
    <Folder Include="Controls\" />
  </ItemGroup>
</Project>
